extends layout 

block content 
    h1 #{title}: #{brand.brand_name}
    p= brand.address

    if brand_items.length 
        p #[strong Delete the following items before attempting to delete this brand.]

        div(style='margin-left: 20px; margin-top: 20px')

            h4 Items 

            dl 
            each item in brand_items 
                dt
                    a(href=item.url) #{item.name}
                dd #{item.description}
    else
        p Do you really want to delete this brand?

        form(method='POST' action='')
            div.form-group
                input#brandid.form-control(type='hidden' name='brandid' required='true' value=brand._id)

                button.btn.btn-primary(type='submit') Delete
