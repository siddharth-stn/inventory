extends layout 

block content
    h1= title 
    form(method='POST' action='')
        div.form-group
            label(for='name') Category:
            input#name.form-control(type="text" placeholder="Enter Category Name" name='name' value=(undefined===category ? '' : category.name ))
            button.btn.btn-primary(type='submit') Submit
    if errors 
        ul 
            for err in errors 
                li!= err.msg 
                            