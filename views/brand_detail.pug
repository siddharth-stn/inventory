extends layout 

block content 
    h1 Brand: #{brand.brand_name}
    div(style='margin-left: 20px, margin-top: 20px')
        h4 Items
        dl
            each item in brand_items
                dt
                    a(href=item.url) #{item.name}
                dd #{item.description}
            else
                p This brand has no items.
    hr
    p
        a(href=brand.url+'/delete') Delete Brand
